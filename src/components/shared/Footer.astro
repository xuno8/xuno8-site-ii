---
import { loadSiteConfig } from '@/utils/data';

const site = loadSiteConfig();
---

<footer
  class="py-8 mt-16"
  style="border-top: 1px solid var(--color-border); background-color: var(--color-bg-alt);"
>
  <div class="max-w-6xl mx-auto px-4 flex justify-center">
    <p class="text-xs" style="color: var(--color-text-muted);">
      &copy; {new Date().getFullYear()}
      {site.name}
    </p>
  </div>
</footer>
