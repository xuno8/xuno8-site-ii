---
import { loadSiteConfig } from '@/utils/data';
import '@/styles/global.css';

const site = loadSiteConfig();

interface Props {
  title?: string;
  description?: string;
}

const { title = `${site.name} — ${site.title}`, description = site.seoDescription } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="developer">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    {site.seoKeywords && <meta name="keywords" content={site.seoKeywords.join(', ')} />}

    <link rel="icon" id="favicon" type="image/svg+xml" href="data:," />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;500;600;700&family=Outfit:wght@400;500;600;700&family=Newsreader:ital,wght@0,400;0,500;0,600;1,400&family=Hanken+Grotesk:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Pre-hydration script — sets favicon and title before Vue hydrates -->
    <script is:inline>
      (function () {
        var favicons = {
          developer:
            "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'%3E%3Ctext x='50%25' y='50%25' dominant-baseline='central' text-anchor='middle' font-family='monospace' font-size='14' font-weight='700' fill='%237dcfff'%3E%26lt;/%26gt;%3C/text%3E%3C/svg%3E",
          photographer:
            "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'%3E%3Ccircle cx='16' cy='16' r='12' fill='none' stroke='%23d4a574' stroke-width='2'/%3E%3Ccircle cx='16' cy='16' r='5' fill='none' stroke='%23d4a574' stroke-width='2'/%3E%3Cline x1='16' y1='4' x2='16' y2='10' stroke='%23d4a574' stroke-width='1.5'/%3E%3Cline x1='16' y1='22' x2='16' y2='28' stroke='%23d4a574' stroke-width='1.5'/%3E%3Cline x1='4' y1='16' x2='10' y2='16' stroke='%23d4a574' stroke-width='1.5'/%3E%3Cline x1='22' y1='16' x2='28' y2='16' stroke='%23d4a574' stroke-width='1.5'/%3E%3Cline x1='7.5' y1='7.5' x2='11.8' y2='11.8' stroke='%23d4a574' stroke-width='1.5'/%3E%3Cline x1='20.2' y1='20.2' x2='24.5' y2='24.5' stroke='%23d4a574' stroke-width='1.5'/%3E%3C/svg%3E",
        };
        window.__FAVICONS__ = favicons;

        var titles = {
          developer: 'Tim Lin \u2014 Software Engineer',
          photographer: 'Tim Lin \u2014 Photographer',
        };
        window.__TITLES__ = titles;

        document.title = titles.developer;
        var link = document.getElementById('favicon');
        if (link) link.href = favicons.developer;
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
